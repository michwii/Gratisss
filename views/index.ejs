<% include header %>
<body class="pull_top">
    
<% include navBar %>

    <div class="container">
		<div class="section_header">
            <h3>Echantillon du jour selectionne par notre equipe</h3>
        </div>  
		<div class="row">
			<div class="col-sm-4">
				<div class="feature">
                    <div class="img">
